{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2016", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "example/**/*", "./global.d.ts", "./scripts/**/*"]
}
